
<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card mt-3">
                <a href="/site/{{ this.slug }}">
                    <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
                </a>
                <div class="card-body">
                    <a href="/site/{{ this.slug }}">
                        <h5 class="card-title">{{ this.title }}</h5>
                    </a>
                    <p class="card-text">{{ this.description }}</p>
                    <a href="#" class="btn btn-primary">Mua khoa hoc</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
